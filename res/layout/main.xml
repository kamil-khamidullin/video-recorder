    <SurfaceView android:layout_height="wrap_content" android:id="@+id/SurfaceView01" android:layout_width="wrap_content">
    </SurfaceView>

    <LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="200dip"
                  android:orientation="vertical" android:gravity="right">
		<Button android:id="@+id/recordBtn" android:text="Record" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		<Button android:id="@+id/saveBtn" android:text="Save" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    
</FrameLayout>
